{
    "$schema": "<relative path to createFormUI.schema.json>",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "AlwaysOn accelerator",
            "steps": [
                {
                    "name": "basics",
                    "label": "Deployment location",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope"
                        }
                    ]
                },
                {
                    "name": "aoSettings",
                    "label": "AlwaysOn core setup",
                    "subLabel": {
                        "preValidation": "Provide a AlwaysOn prefix for the reource groups the deployment pipelines will created.",
                        "postValidation": "Done"
                    },
                    "bladeTitle": "AlwaysOn prefix",
                    "elements": [
                        {
                            "name": "info",
                            "type": "Microsoft.Common.InfoBox",
                            "visible": "true",
                            "options": {
                                "text": "AlwaysOn will use this prefix for all resoruce groups this AlwaysOn deployment will use.",
                                "uri": "",
                                "style": "Info"
                            }
                        },
                        {
                            "name": "resourceGroup",
                            "type": "Microsoft.Common.TextBlock",
                            "visible": "true",
                            "options": {
                                "text": "AlwaysOn will use the same prefix for all pipelines",
                                "link": {
                                    "label": "Learn more",
                                    "uri": ""
                                }
                            }
                        },
                        {
                            "name": "aoResourceGroup",
                            "type": "Microsoft.Common.TextBox",
                            "label": "AlwaysOn Resource Group prefix",
                            "toolTip": "Provide a prefix (max 5 characters) for the Management Group hierarchy and other resources created as part of Enterprise-scale.",
                            "defaultValue": "",
                            "constraints": {
                                "required": "true",
                                "regex": "^[a-z0-9A-Z-]{1,5}$",
                                "validationMessage": "The prefix must be 1-5 characters."
                            }
                        },
                        {
                            "name": "aoSubSection",
                            "type": "Microsoft.Common.Section",
                            "label": "AlwaysOn subscription",
                            "elements": [
                                {
                                    "name": "subText",
                                    "type": "Microsoft.Common.TextBlock",
                                    "visible": "true",
                                    "options": {
                                        "text": "Select the subscription that will be used by the pipeline for the AlwaysOn deployment. AlwaysOn will be distributed across multible resource groups."
                                    }
                                },
                                {
                                    "type": "Microsoft.Common.SubscriptionSelector",
                                    "name": "aoSub",
                                    "label": "AlwaysOn subscription"
                                }
                            ],
                            "visible": "true"
                        }
                    ]
                },
                {
                    "name": "aoDevOps",
                    "label": "AlwaysOn DevOps and automation",
                    "subLabel": {},
                    "bladeTitle": "ao Dev Ops",
                    "elements": [
                        {
                            "name": "info",
                            "type": "Microsoft.Common.InfoBox",
                            "visible": "true",
                            "options": {
                                "text": "AlwaysOn will be deployed and is full managed via a CICD pipeline using Azure DevOps Pipelines",
                                "uri": "",
                                "style": "Info"
                            }
                        },
                        {
                            "name": "Instructions",
                            "type": "Microsoft.Common.TextBlock",
                            "visible": "true",
                            "options": {
                                "text": "Provide the credentials to initialize the repository with the ARM templates for AlwaysOn.",
                                "link": {
                                    "label": "Learn more",
                                    "uri": ""
                                }
                            }
                        },
                        {
                            "name": "aoPlOptions",
                            "type": "Microsoft.Common.OptionsGroup",
                            "label": "Select CICD option",
                            "defaultValue": "Azure DevOps Pipelines",
                            "toolTip": "AlwaysOn will provide options for Azure DevOps Pipelines. Additional options such as GitHub actions will be added in the future.",
                            "constraints": {
                                "allowedValues": [
                                    {
                                        "label": "Azure DevOps Pipelines",
                                        "value": "adoDevOpsPipelines"
                                    }
                                ],
                                "required": "true"
                            },
                            "visible": "true"
                        },
                        {
                            "name": "aoAdoOrg",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Select an existing Azure DevOps organization name",
                            "toolTip": "Provide Azure DevOps organization name.",
                            "visible": "true",
                            "defaultValue": "",
                            "constraints": {
                                "required": "true",
                                "regex": "^[a-z0-9A-Z-]{1,50}$",
                                "validationMessage": "The Azure DevOps organization name must be 1-50 characters."
                            }
                        },
                        {
                            "name": "aoAdoRepoName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "New Azure DevOps project name",
                            "toolTip": "Provide a name for the new repository that will be created",
                            "defaultValue": "",
                            "visible": "true",
                            "placeholder": "",
                            "constraints": {
                                "required": "true",
                                "regex": "^[a-z0-9A-Z-]{1,64}$",
                                "validationMessage": "The repository name must be 1-64 characters."
                            }
                        },
                        {
                            "name": "aoGhOrg",
                            "type": "Microsoft.Common.TextBox",
                            "label": "GitHub organization or username",
                            "toolTip": "Provide an exiting GitHub org/username.",
                            "visible": "true",
                            "defaultValue": "",
                            "constraints": {
                                "required": "true",
                                "regex": "^[a-z0-9A-Z-]{1,39}$",
                                "validationMessage": "The GitHub org/username must be 1-39 characters."
                            }
                        },
                        {
                            "name": "aoGhRepoName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "New GitHub repository name",
                            "toolTip": "Provide a name for the new repository that will be created",
                            "defaultValue": "",
                            "visible": "true",
                            "placeholder": "",
                            "constraints": {
                                "required": "true",
                                "regex": "^[a-z0-9A-Z-]{1,100}$",
                                "validationMessage": "The repository name must be 1-100 characters."
                            }
                        },
                        {
                            "name": "aoPaToken",
                            "type": "Microsoft.Common.PasswordBox",
                            "label": {
                                "password": "GitHub personal access token",
                                "confirmPassword": "Confirm PA Token"
                            },
                            "toolTip": "Provide the personal access token to access your GitHub account or organization. For more information see this link: https://docs.github.com/en/github/authenticating-to-github/creating-a-personal-access-token",
                            "constraints": {
                                "required": "true",
                                "validationMessage": "Password must be at least 8 characters long, contain only numbers and letters"
                            },
                            "options": {
                                "hideConfirmation": "true"
                            },
                            "visible": "true"
                        },
                        {
                            "name": "spnSection",
                            "type": "Microsoft.Common.Section",
                            "label": "",
                            "elements": [
                                {
                                    "name": "aoServicePrincipal",
                                    "type": "Microsoft.Common.ServicePrincipalSelector",
                                    "visible": "true",
                                    "label": {
                                        "password": "Password",
                                        "certificateThumbprint": "Certificate thumbprint",
                                        "authenticationType": "Authentication Type",
                                        "sectionHeader": "Service Principal"
                                    },
                                    "toolTip": {
                                        "password": "Provide the application secret as it will be used to authenticate with Azure AD",
                                        "certificateThumbprint": "Certificate thumbprint",
                                        "authenticationType": "Authentication Type"
                                    },
                                    "defaultValue": {
                                        "principalId": "",
                                        "name": ""
                                    },
                                    "constraints": {
                                        "required": "true"
                                    },
                                    "options": {
                                        "hideCertificate": "true"
                                    }
                                }
                            ],
                            "visible": "true"
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "principalId": "[steps('aoDevOps').spnSection.aoServicePrincipal.objectId]",
                "appId": "[steps('aoDevOps').spnSection.aoServicePrincipal.appId]",
                "principalSecret": "[steps('aoDevOps').spnSection.aoServicePrincipal.password]",
                "adoOrgName": "[steps('aoDevOps').aoAdoOrg]",
                "adoProjectName": "[steps('aoDevOps').aoAdoProjectName]",
                "ghOrgName": "[steps('aoDevOps').aoGhOrg]",
                "ghRepoName": "[steps('aoDevOps').aoGhRepoName]",
                "paToken": "[steps('aoDevOps').aoPaToken]",
                "subscriptionId": "[steps('aoSettings').aoSub.subscriptionId]"
            },
            "kind": "Subscription",
            "location": "[steps('basics').resourceScope.location.name]"
        }
    }
}